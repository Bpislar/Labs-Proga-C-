#include <iostream>
#include <cmath>
using namespace std;

int main()
{
    int b1, q;
    cout<<"Vvedit b1 ta q\n";
    cin>>b1;
    cin>>q;
    int i=1, res=1;
    while (res<=100)
    {
        i++;
    	cout<<"\nb"<<i<<" = ";
    	res=b1*pow(q,i-1);
    	cout<<res;
    }
   
    cin.get();
    cin.get();
    return 0;
}
